<div class="comment clearfix">
  <div class="comment-content">
    <p class="comment-name"><em><%= comment.name %> says:</em></p>
    <p class="comment-bidy"><%= comment.body %></p>
    <p class="comment-title"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: {confirm: 'Are you sure?'} %></p>
  <% end %>
</div>
